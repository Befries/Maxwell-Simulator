<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="GtkWindow" id="window">
    <property name="title">Maxwell's equations simulator</property>
    <property name="default-width">1200</property>
    <property name="default-height">800</property>
      
    <child>
      <object class="GtkBox" id="main_content_box">
        <property name="orientation">horizontal</property>

        <child>
          <object class="GtkDrawingArea" id="canvas">
            <property name="width-request">900</property>
          </object>
        </child>
        <child>
          <object class="GtkGrid" id="grid">
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <property name="margin-top">12</property>
            <property name="margin-bottom">12</property>
            <property name="row-spacing">12</property>
            <property name="column-spacing">12</property>
            
            <child>
              <object class="GtkButton" id="B0">
                <property name="label">B1</property>
                <layout>
                  <property name="column">0</property>
                  <property name="row">0</property>
                </layout>
              </object>
            </child>

            <child>
              <object class="GtkButton" id="B2">
                <property name="label">B2</property>
                <layout>
                  <property name="column">0</property>
                  <property name="row">1</property>
                </layout>
              </object>
            </child>


          </object>
        </child>

      </object>
    </child>

  </object>
</interface>
